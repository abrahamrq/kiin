<div class="row">
  <div class="col-sm-4 col-sm-offset-4">
    <h1 align="center">Acceder</h1>
    <div class="well">
      <%= form_for(resource, :as => resource_name,
      :url => session_path(resource_name),
      role: "form") do |f| %>

      <div class="form-group">
        <%= f.label :Correo_itesm %>
        <div class="row">
          <div class="col-sm-12">
            <%= f.text_field :email, :autofocus => true, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :Clave %>
        <div class="row">
          <div class="col-sm-12">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-sm-5">
          <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <div class="row">
              <div class="col-sm-12" >
                <%= f.check_box :remember_me %> <%= f.label :recordarme %>
              </div>
            </div>
          </div>
          <% end -%>

          <div class="row">
            <div class="col-sm-12" >
              <%= f.submit "Acceder", class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="col-sm-7">
          <div class="pull-right">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
